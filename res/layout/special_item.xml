<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">
        <ImageView
            android:id="@+id/iv_special_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/logo"/>
        <TextView
            android:id="@+id/tv_special_name"
            android:layout_toRightOf="@id/iv_special_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="初棉"
            android:textSize="30dp"
            android:textColor="#000"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_special_rr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0折起"
            android:textColor="#000"
            android:layout_alignParentRight="true"
            android:layout_marginRight="80dp"
            android:layout_centerVertical="true"
            android:background="#e15f5f"/>
        <TextView
            android:id="@+id/tv_special_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="剩8天"
            android:textColor="#000"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="240dp"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">
        <ImageView
            android:id="@+id/iv_special_big"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/U8"
            android:scaleType="fitXY"
            android:paddingRight="2dp"/>
        <LinearLayout
            android:paddingLeft="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2">
            <ImageView
                android:id="@+id/iv_special_small1"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/VF"
                android:scaleType="fitXY"
                android:paddingBottom="2dp"/>
            <ImageView
                android:id="@+id/iv_special_small2"
                android:paddingTop="2dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/IR"
                android:scaleType="fitXY"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>